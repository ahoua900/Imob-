@model ImobPlus.Models.Liconseil
@{
    ViewBag.Title = "LigneConseil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.succes != null)
{
    <div class="container">
        <div class="alert-success">
            <p>@ViewBag.succes</p>
        </div>
    </div>
}

<div class="container" style="padding:50px;">
    <div class="title__titre--form">
        <span>
            <h2 style="text-decoration:underline;">Discutez avec un conseiller</h2>
        </span>
    </div>
    <div class="row">
        <div class="col-md-6">

            <form class="maform" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="nom et prenom" name="NomPrenom" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Adrese email" name="Email" />
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" name="Message" rows="7"></textarea>
                </div>
                <button type="submit" class="btn btn-warning">Envoyer</button>
            </form>
        </div>
        <div class="col-md-6">
            <img src="~/Content/Images/reservation.jpg" width="500" height="370" alt="Alternate Text" />
        </div>
    </div>
</div>

