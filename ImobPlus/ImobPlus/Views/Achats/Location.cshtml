@model IEnumerable<ImobPlus.Models.Post>

@{
    ViewBag.Title = "Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center title">Vous recherchez une maison ou un terrain ?</h2>

@*Search Bar*@
<div class="container-fluid">
    <div class="search-form">

        <form action="#" method="post">
            <div class="row justify-content-between align-items-end">
                <div class="col-6 col-md-2">
                    <label for="surface">Surface</label>
                    <select name="surface" class="form-control">
                        <option value="Terrain">Terrain</option>
                        <option value="Maison">Maison</option>
                    </select>
                </div>

                <div class="col-6 col-md-2">
                    <label for="loc">Choix</label>
                    <select name="loc" class="form-control">
                        <option value="Location">Location</option>
                        <option value="Achat">Achat</option>
                    </select>
                </div>

                <div class="col-6 col-md-3">
                    <label for="min">Prix Minimum</label>
                    <input type="number" class="form-control" name="min" min="20000" step="1000" />
                </div>

                <div class="col-6 col-md-3">
                    <label for="max">Prix Maximum</label>
                    <input type="number" class="form-control" name="max" min="20000" step="1000">
                </div>

                <div class="col-12 col-md-2">
                    <div style="height:26px;"></div>
                    <button type="submit" class="form-control btn imob-btn w-100">Recherchez</button>
                </div>
            </div>

        </form>
    </div>

</div>

<div class="container aff-home">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-4 card">
                <img class="card-img-top" src="~/Fichier/@item.Img_Post" height="250" />
                <div class="card-body">
                    <h5 class="card-title">@item.Location</h5>
                    <p class="card-text">@item.Mini_Describe</p>
                    <p class="card-text-price">@item.Choix</p>
                    <p class="card-text-price">@item.Price FCFA</p>
                    <a class="btn btn-card" href="~/Achats/LocationDetails/@item.Id_Post" style="float:right;">Détails <span class="glyphicon glyphicon-arrow-right"></span></a>
                </div>
            </div>
        }


