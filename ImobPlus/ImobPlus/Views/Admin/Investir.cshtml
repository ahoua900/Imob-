@model ImobPlus.Models.Investir
@{
    ViewBag.Title = "Investir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-10 list-location">
    <div class="title-page">
        <h3>Services/ Investissement</h3>
    </div>
    <table>
        <th>Id</th>
        <th>Nom</th>
        <th>Email</th>
        <th>Type d'investissement</th>
        <th>Message</th>
        <th>Delete</th>

        @foreach (var item in ViewBag.Investir)
        {
            <tr>
                <td>@item.IdInvest</td>
                <td>@item.NameInvest</td>
                <td>@item.EmailInvest</td>
                <td>@item.TypeInvest</td>
                <td>@item.MessageInvest </td>

                <td>
                    <a href="~/Admin/DeletePost/@item.IdInvest">
                        <button class="btn btn-danger" data-toggle="modal" data-target="#myModal">delete</button>
                    </a>
                </td>

            </tr>
        }


